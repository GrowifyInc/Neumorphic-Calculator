<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    tools:context=".about_app_activity">

    <TextView
        android:id="@+id/about_app_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Neumorphic Calculator"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/about_app_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/about_app_head"
        android:text="This Calculator Is Designed By The Neumorphic (Soft) Design Language Introduced In 2020."
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="33dp"
        android:paddingEnd="33dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/copyContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed And Developed By Growify Inc. Open Source Division Â© Copyright 2018-2030"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/about_app_desc"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="33dp"
        android:paddingEnd="33dp"
        android:textAlignment="center"/>
    
    <TextView
        android:id="@+id/prelink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/copyContent"
        android:text="The Open Source Code For The App Can Be Found At:"/>

    <TextView
        android:id="@+id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textAlignment="center"
        android:text="https://github.com/GrowifyInc/Neumorphic-Calculator"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/prelink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/aboutClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/github_link"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="33dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>